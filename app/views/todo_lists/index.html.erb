<div class="container">
   <div class="card">
      <div class="card-body">
         <h1 class="text-center">My Todo List</h1>
      </div>
   </div>
      
      <div class="card mt-5">
        <div class="card-body">
           <table class="table table-blue table-hover">
             <thead>
               <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Status</th>
                  <th colspan="3">Action</th>
               </tr>
             </thead>

             <tbody>
               <% @todo_lists.each_with_index do |todo_list, index| %>
                <tr>
                   <td><%= index + 1 %></td>
                   <td><%= todo_list.name %></td>
                   <td><%= todo_list.status%></td>
                   <td><%= link_to "Edit", edit_todo_list_path(todo_list) %></td>
                   <td><%= link_to "Show", todo_list_path(todo_list) %></td>
                   <td><%= link_to "Delete", todo_list_path(todo_list), method: :delete, data: {confirm: "Are you sure?"} %></td>
                 </tr>
               <% end %>
             </tbody>
           </table>
        </div>
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%= link_to("Create new todo", new_todo_list_path, class: "btn btn-dark") %>
      </div>
</div>
      