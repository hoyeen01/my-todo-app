<div class="cont2">
   <div class="card mb-5">
      <div class="card-body">
        <h1 class="text-center"><%= @todo.name%></h1>
      </div>
    </div>
    <div class="card mt-5">
    <div class="card-body">
      <table class="table">
        <thead>
        <tr>
          <th scope="col">status</th>
          <th scope="col">Created at</th>
          <th scope="col">Updated at</th>
        </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @todo.status %></td>
            <td><%= time_ago_in_words(@todo.created_at) %> ago</td>
            <td><%= time_ago_in_words(@todo.updated_at) %> ago</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
  <%= link_to "Edit", edit_todo_path(@todo) %> |
  <%= link_to "Todo", todos_path %>
</div>
</div>
